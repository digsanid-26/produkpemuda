<%- contentFor('head') %>
<title>Project - <%= settings.site ? settings.site.name : 'Produk Pemuda Santara' %></title>
<meta name="description" content="Lihat berbagai project dan karya dari PT Produk Pemuda Santara">

<%- contentFor('body') %>

<%- include('partials/header/navbar5') %>

<!-- Breadcrumb Area -->
<div class="breadcrumb-section-area" style="background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-area text-center">
          <h2>Project Kami</h2>
          <div class="space20"></div>
          <ul>
            <li><a href="/">Beranda</a></li>
            <li><i class="fa-solid fa-angle-right"></i></li>
            <li>Project</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Projects List Section -->
<div class="project-list-section sp1">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="heading5 text-center space-margin60">
          <h5>PROJECT KAMI</h5>
          <div class="space20"></div>
          <h2>Rencana Pengembangan Bisnis</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <% if (projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="project-card" style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: transform 0.3s, box-shadow 0.3s;">
            <div class="project-image" style="position: relative; overflow: hidden;">
              <img src="<%= project.featuredImage %>" alt="<%= project.title %>" style="width: 100%; height: 220px; object-fit: cover; transition: transform 0.3s;">
              <% const cat = categories.find(c => c.id === project.categoryId); %>
              <% if (cat) { %>
              <span style="position: absolute; top: 15px; left: 15px; background: #1e3a8a; color: white; padding: 5px 12px; border-radius: 20px; font-size: 12px;"><%= cat.name %></span>
              <% } %>
            </div>
            <div class="project-content" style="padding: 25px;">
              <h4 style="margin-bottom: 12px;"><a href="/project/<%= project.slug %>" style="color: #1e293b; text-decoration: none;"><%= project.title %></a></h4>
              <p style="color: #64748b; margin-bottom: 20px; font-size: 14px; line-height: 1.6;"><%= project.shortDescription %></p>
              <a href="/project/<%= project.slug %>" style="color: #1e3a8a; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                Lihat Detail <i class="fa-solid fa-arrow-right"></i>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <p class="text-muted">Belum ada project yang tersedia.</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
.project-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}
.project-card:hover .project-image img {
  transform: scale(1.05);
}
</style>

<%- include('partials/footer/footer5') %>
