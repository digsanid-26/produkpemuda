<div class="top-bar">
    <h1 class="page-title">Fokus Sosial CSR</h1>
    <a href="/admin/csr-focus/create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Tambah Fokus Sosial
    </a>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Daftar Fokus Sosial</span>
        <span class="badge bg-primary"><%= csrFocus.length %> Item</span>
    </div>
    <div class="card-body">
        <% if (csrFocus.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-heart text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Belum ada fokus sosial. Klik tombol "Tambah Fokus Sosial" untuk menambahkan.</p>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="60">Urutan</th>
                            <th width="80">Gambar</th>
                            <th>Judul</th>
                            <th>Deskripsi</th>
                            <th width="100">Status</th>
                            <th width="150">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% csrFocus.forEach(item => { %>
                            <tr>
                                <td><span class="badge bg-secondary"><%= item.order %></span></td>
                                <td>
                                    <img src="<%= item.image %>" alt="<%= item.title %>" 
                                         style="width: 60px; height: 45px; object-fit: cover; border-radius: 6px;">
                                </td>
                                <td><strong><%= item.title %></strong></td>
                                <td><%= item.description.substring(0, 80) %>...</td>
                                <td>
                                    <% if (item.published) { %>
                                        <span class="badge badge-published">Dipublikasi</span>
                                    <% } else { %>
                                        <span class="badge badge-draft">Draft</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/admin/csr-focus/edit/<%= item.id %>" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/admin/csr-focus/delete/<%= item.id %>" class="btn btn-sm btn-outline-danger" 
                                       onclick="return confirm('Yakin ingin menghapus fokus sosial ini?')" title="Hapus">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>
