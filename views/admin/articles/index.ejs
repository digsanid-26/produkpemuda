<% locals.page = 'articles' %>

<div class="top-bar">
    <h1 class="page-title">Kelola Artikel</h1>
    <a href="/admin/articles/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tambah Artikel
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Judul</th>
                        <th>Kategori</th>
                        <th>Tanggal</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (articles.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Belum ada artikel</td>
                    </tr>
                    <% } else { %>
                    <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.id %></td>
                        <td><strong><%= article.title %></strong></td>
                        <td><%= article.category %></td>
                        <td><%= article.date %></td>
                        <td>
                            <% if (article.published) { %>
                            <span class="badge badge-published">Published</span>
                            <% } else { %>
                            <span class="badge badge-draft">Draft</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/admin/articles/delete/<%= article.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Yakin ingin menghapus artikel ini?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
