<% locals.page = 'portfolio' %>

<div class="top-bar">
    <h1 class="page-title">Kelola Portfolio</h1>
    <a href="/admin/portfolio/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tambah Portfolio
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Judul</th>
                        <th>Kategori</th>
                        <th>Client</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (portfolio.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Belum ada portfolio</td>
                    </tr>
                    <% } else { %>
                    <% portfolio.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><strong><%= item.title %></strong></td>
                        <td><%= item.category %></td>
                        <td><%= item.client %></td>
                        <td>
                            <% if (item.published) { %>
                            <span class="badge badge-published">Published</span>
                            <% } else { %>
                            <span class="badge badge-draft">Draft</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/portfolio/edit/<%= item.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/admin/portfolio/delete/<%= item.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Yakin ingin menghapus portfolio ini?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
