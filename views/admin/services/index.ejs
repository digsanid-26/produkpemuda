<% locals.page = 'services' %>

<div class="top-bar">
    <h1 class="page-title">Kelola Layanan/Produk</h1>
    <a href="/admin/services/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tambah Layanan
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width: 60px;">Gambar</th>
                        <th>Judul</th>
                        <th>Kategori</th>
                        <th>Urutan</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (services.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Belum ada layanan</td>
                    </tr>
                    <% } else { %>
                    <% services.forEach(service => { %>
                    <tr>
                        <td>
                            <img src="<%= service.featuredImage %>" alt="<%= service.title %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                        </td>
                        <td>
                            <strong><%= service.title %></strong>
                            <br><small class="text-muted"><%= service.shortDescription.substring(0, 50) %>...</small>
                        </td>
                        <td>
                            <% const cat = categories.find(c => c.id === service.categoryId); %>
                            <%= cat ? cat.name : '-' %>
                        </td>
                        <td><%= service.order %></td>
                        <td>
                            <% if (service.published) { %>
                            <span class="badge badge-published">Published</span>
                            <% } else { %>
                            <span class="badge badge-draft">Draft</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/services/edit/<%= service.id %>" class="btn btn-sm btn-outline-primary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/admin/services/delete/<%= service.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Yakin ingin menghapus layanan ini?')" title="Hapus">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Kategori Layanan</span>
                <a href="/admin/service-categories" class="btn btn-sm btn-outline-primary">Kelola</a>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <% categories.forEach(cat => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= cat.name %>
                        <span class="badge bg-primary rounded-pill"><%= services.filter(s => s.categoryId === cat.id).length %></span>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Tag Layanan</span>
                <a href="/admin/service-tags" class="btn btn-sm btn-outline-primary">Kelola</a>
            </div>
            <div class="card-body">
                <% tags.forEach(tag => { %>
                <span class="badge bg-secondary me-1 mb-1"><%= tag.name %></span>
                <% }) %>
            </div>
        </div>
    </div>
</div>
