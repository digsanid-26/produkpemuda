<% locals.page = 'services' %>

<div class="top-bar">
    <h1 class="page-title">Tag Layanan</h1>
    <a href="/admin/services" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Kembali ke Layanan
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header"><%= editTag ? 'Edit Tag' : 'Tambah Tag Baru' %></div>
            <div class="card-body">
                <form method="POST" action="/admin/service-tags/<%= editTag ? 'edit/' + editTag.id : 'create' %>">
                    <div class="mb-3">
                        <label class="form-label">Nama Tag <span class="text-danger">*</span></label>
                        <input type="text" name="name" class="form-control" value="<%= editTag ? editTag.name : '' %>" required>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> <%= editTag ? 'Update' : 'Simpan' %>
                        </button>
                        <% if (editTag) { %>
                        <a href="/admin/service-tags" class="btn btn-outline-secondary">Batal</a>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">Daftar Tag</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nama</th>
                                <th>Slug</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (tags.length === 0) { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">Belum ada tag</td>
                            </tr>
                            <% } else { %>
                            <% tags.forEach(tag => { %>
                            <tr>
                                <td><%= tag.id %></td>
                                <td><span class="badge bg-secondary"><%= tag.name %></span></td>
                                <td><code><%= tag.slug %></code></td>
                                <td>
                                    <a href="/admin/service-tags/edit/<%= tag.id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/admin/service-tags/delete/<%= tag.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Yakin ingin menghapus tag ini?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
